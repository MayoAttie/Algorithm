#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

bool comparer(int& a, int& b) { return a > b; }

int main() {
    int n;
    cin >> n;

    vector<int> trees(n);
    for (int i = 0; i < n; i++) {
        cin >> trees[i];
    }

    sort(trees.begin(), trees.end(), comparer);

    long long total = 0;
    for (int i = 0; i < n; i++)
    {
        total = max(total, static_cast<long long>(i + 1) + trees[i]);
    }

    cout << total+1 << endl;

    return 0;
}