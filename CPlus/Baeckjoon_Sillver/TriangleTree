#include <iostream>
#include <vector>

using namespace std;

int main()
{
    ios::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);

    long long n;
    cin >> n;
    long long answer = n - 1 + (n - 2) * (n - 1);
    cout << answer << '\n';
    for (long long i = 2; i <= n; i++)
        cout << "1 " << i << '\n';

}