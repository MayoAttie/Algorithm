#include <iostream>
#include <iomanip>

using namespace std;

const double PI = 3.141592;

double solution(int d1, int d2) 
{
    return 2 * d1 + 2 * PI * d2;
}

int main() 
{
    int d1, d2;
    cin >> d1 >> d2;

    double perimeter = solution(d1, d2);

    cout << fixed << setprecision(6) << perimeter;

    return 0;
}