#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

int main() 
{
    ios::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);

    int n;
    cin >> n;

    vector<pair<int, int>> arr(n);
    for (int i = 0; i < n; i++)
    {
        cin >> arr[i].first >> arr[i].second;
    }

    sort(arr.begin(), arr.end());

    int answer = 0;
    int start = arr[0].first;
    int end = arr[0].second;

    for (int i = 1; i < n; i++)
    {
        if (arr[i].first < end)
            end = max(end, arr[i].second);
        else
        {
            answer += (end - start);
            start = arr[i].first;
            end = arr[i].second;
        }
    }
    answer += (end - start);

    cout << answer;

    return 0;
}