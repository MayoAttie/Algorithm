#include <string>
#include <vector>

using namespace std;

int solution(vector<int> a) {
    int n = a.size();
    if (n <= 2) return n; // 풍선이 2개 이하면 모두 최후까지 남을 수 있음

    vector<int> leftMin(n); // 왼쪽에서 i까지의 최소값 저장
    vector<int> rightMin(n); // 오른쪽에서 i까지의 최소값 저장

    leftMin[0] = a[0];
    for (int i = 1; i < n; i++) 
    {
        leftMin[i] = min(leftMin[i - 1], a[i]);
    }

    rightMin[n - 1] = a[n - 1];
    for (int i = n - 2; i >= 0; i--) 
    {
        rightMin[i] = min(rightMin[i + 1], a[i]);
    }

    int answer = 2; // 양 끝의 풍선은 항상 최후까지 남을 수 있음
    for (int i = 1; i < n - 1; i++) {
        if (a[i] < leftMin[i - 1] || a[i] < rightMin[i + 1]) {
            answer++;
        }
    }

    return answer;
}